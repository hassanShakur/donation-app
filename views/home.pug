                //-             img(src=donation.image, alt=donation.name)
                //-             h3= donation.name
                //-             p= donation.description

                //- create test donations for now
                each index in [1, 2, 3, 4, 5, 6, 7, 8, 9]
                    li
                        a(href='/donations/' + index)
                            img(src='https://source.unsplash.com/random/' + index, alt='Test donation')
