extends layout

block content
    //- h1= title
    div#donations
        div#donation-form
            h2 Create a new donation
            
            form#donate-form
                input(type='text', id='name', name='name', placeholder='Donation Name', required)
                input(type='text', id='image', name='image', placeholder='Image URL', required)
                input(type='text', id='description', name='description', placeholder='Description', required)
                input(type='submit', value='Create')
        
        div#donation-items
            h2 All donations
            ul#donation-list
                //- each donation in donations
